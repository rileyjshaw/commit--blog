{
  "apps": {
    "http": {
      "http_port": <%= ENV['PORT'] %>,
      "servers": {
        "srv0": {
          "listen": [":<%= ENV['PORT'] %>"],
          "routes": [{
            "match": [{
              "host": [
                "*.<%= ENV['SERVER_NAME'] %>",
                "<%= ENV['SERVER_NAME'] %>"
              ]
            }],
            "handle": [{
              "handler": "subroute",
              "routes": [{
                "handle": [{
                  "handler": "reverse_proxy",
                  "upstreams": [{"dial": "unix//tmp/caddy.sock"}]
                }]
              }]
            }],
            "terminal": true
          }]
        }
      }
    }
  }
}
