{
  "apps": {
    "http": {
      "http_port": <%= ENV['PORT'] %>,
      "https_port": 3443,
      "servers": {
        "srv0": {
          "listen": [":<%= ENV['PORT'] %>", ":3443"],
          "routes": [{
            "match": [{"host": ["*.commit--blog.com", "commit--blog.com"]}],
            "handle": [{
              "handler": "subroute",
              "routes": [{
                "handle": [{
                  "handler": "reverse_proxy",
                  "upstreams": [{"dial": "unix//tmp/caddy.sock"}]
                }]
              }]
            }],
            "terminal": true
          }]
        }
      }
    },
    "tls": {
      "automation": {
        "policies": [{
          "issuer": {"email": "uniphil@gmail.com", "module": "acme"}
        }]
      }
    }
  }
}
